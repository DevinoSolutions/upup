{
    "sourceType": "unambiguous",
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "chrome": 100
                }
            },
            ["@babel/preset-react", {"runtime": "automatic"}]
        ],
        "@babel/preset-typescript",
        "@babel/preset-react"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "extensions": [".ts", ".tsx"],
                "root": "./src",
                "alias": {
                    "#components": "./src/components",
                    "#types": ["./src/types"],
                    "#hooks": ["./src/hooks"],
                    "#lib": ["./src/lib"]
                }
            }
        ]
    ]
}
